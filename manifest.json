{
    "manifest_version": 2,
    "name": "X-Ray Clipboarder",
    "description": "Scrape the webs contents without restrictions â™¡",
    "version": "1.2.0",
    "icons": {
        "256": "img/icon_256.png"
    },
    "permissions": [
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*", "https://*/*"
            ],
            "js": [
                "content-script/main.js"
            ],
            "all_frames": true
        }
    ],
    "browser_action": {
        "default_icon": {
            "256": "img/icon_256.png"
        },
        "default_popup": "popup/index.html"
    }
}